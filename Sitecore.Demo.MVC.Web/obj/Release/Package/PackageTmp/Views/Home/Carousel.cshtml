@using Sitecore.Mvc
@using Sitecore.Demo.MVC.Web.Models.Feature.Home
@model Carousel

@{ 
    int count = 0;
}

<!-- Carousel Start -->
@if (Model != null && Model.Slides != null)
{
    <div id="carousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @for (int slide = 0; slide < Model.Slides.Count; slide++)
            {
                if (slide == 0)
                {
                    <li data-target="#carousel" data-slide-to="@slide" class="active"></li>
                }
                else
                {
                    <li data-target="#carousel" data-slide-to="@slide"></li>
                }
            }
        </ol>
        <div class="carousel-inner">
            @foreach (var slide in Model.Slides)
            {
                var activeClass = count == 0 ? "active" : string.Empty;
                <div class="carousel-item @activeClass">
                    @slide.Image
                    <div class="carousel-caption">
                        <p class="animated fadeInRight">@slide.Title</p>
                        <h1 class="animated fadeInLeft">@slide.SubTitle</h1>
                        @slide.CallToAction
                    </div>
                </div>
                count++;
            }
        </div>

        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}
<!-- Carousel End -->