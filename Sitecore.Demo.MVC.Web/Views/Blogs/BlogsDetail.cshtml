@using Sitecore.Mvc
@using Sitecore.Data.Items

@using Sitecore.Demo.MVC.Web.Models.Feature.Blogs
@model BlogItem

@{
    Item pageItem = Sitecore.Context.Item;
}

<!-- Blog detail Start -->
@if (pageItem != null)
{
    <div class="about wow fadeInUp" data-wow-delay="0.1s">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5 col-md-6">
                    <div class="about-img">
                        @Html.Sitecore().Field("Image", pageItem.Fields["Image"].Value)
                    </div>
                </div>
                <div class="col-lg-7 col-md-6">
                    <div class="section-header text-left">
                        <p>@Html.Sitecore().Field("Title", pageItem.Fields["Title"].Value)</p>
                    </div>
                    <div class="about-text">
                        @Html.Sitecore().Field("Description", pageItem.Fields["Description"].Value)
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<!-- Blog detail End -->