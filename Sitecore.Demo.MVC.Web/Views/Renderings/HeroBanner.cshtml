@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel

@*To get the link using link manager*@
@{ 
    var currentUrl = Sitecore.Links.LinkManager.GetItemUrl(Model.PageItem);
    var parentUrl = Sitecore.Links.LinkManager.GetItemUrl(Model.PageItem.Parent);
}

<!-- Page Header Start -->
@if (Model != null && Model.PageItem != null)
{
    <div class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    @*we can display the content in below both ways and we can edit the value in EE*@
                    <h2>@Html.Sitecore().Field("Title", Model.PageItem)</h2>
                    @*We can edit the value in EE using below code*@
                    @*<h2>@Html.Sitecore().Field("Title", Model.PageItem.Fields["Title"])</h2>*@
                </div>
                <div class="col-12">
                    <a href="@parentUrl">@Html.Sitecore().Field("Title", Model.PageItem.Parent)</a>
                    <a href="@currentUrl">@Html.Sitecore().Field("Title", Model.PageItem)</a>
                </div>
            </div>
        </div>
    </div>
}
<!-- Page Header End -->
